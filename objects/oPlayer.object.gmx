        <arguments>
          <argument>
            <kind>1</kind>
            <string>randomize();
//Player
// Movement //

PlayerSpeed = 300 / room_speed
speed = 0

if keyboard_check(ord('W'))
{
    vspeed = -PlayerSpeed
}

if keyboard_check(ord('S'))
{
    vspeed = PlayerSpeed
}

if keyboard_check(ord('A'))
{
    hspeed = -PlayerSpeed
}

if keyboard_check(ord('D'))
{
    hspeed = PlayerSpeed
}

image_speed = speed / 20

hspeed = hspeed + xShunt
vspeed = vspeed + yShunt
ResetShunt()

//if about to hit a block
if place_meeting(x + hspeed,y + vspeed, oSolid)
{
    //keep as much of horizontal speed as possible
    OldHspeed = hspeed
    hspeed = 0
    while 
        place_meeting(x + hspeed + sign(OldHspeed), y, oSolid) = false &amp;&amp; //check if there's still room wth current hspeed if we crept a bit closer to our old hspeed
        abs(hspeed) &lt; abs(OldHspeed) // check we haven't restored all of our old hspeed, and only pay attention to the absolute values, magnitude
    {        
        //creep towards old hspeed
        hspeed = hspeed + sign(OldHspeed)
    }
    
    //we have now figured out how much of our hspeed we can keep without hitting anything
    
    ////////////////////////////
    
    //keep as much of vertical speed as possible
    OldVspeed = vspeed
    vspeed = 0
    while 
        place_meeting(x + hspeed, y + vspeed + sign(OldVspeed), oSolid) = false &amp;&amp; //check if there's still room wth current vspeed if we crept a bit closer to our old vspeed
        abs(vspeed) &lt; abs(OldVspeed) // check we haven't restored all of our old vspeed, and only pay attention to the absolute values, magnitude
    {        
        //creep towards old vspeed
        vspeed = vspeed + sign(OldVspeed)
    }
    
}


// Weapon Switching //
if mouse_check_button_pressed(mb_right)
{
    //switch to the next weapon up
    SelectedWeaponIndex = SelectedWeaponIndex + 1
    if SelectedWeaponIndex &gt;= WeaponCount
    {
        SelectedWeaponIndex = 0
    }
}

// Facing //
Facing = point_direction(x, y, mouse_x, mouse_y)

//Power Up
if Power &lt;= PowerMax 
{
    PowerUpCollected = instance_place(x,y,oPowerUp)
    if instance_exists(PowerUpCollected)
    {
        with PowerUpCollected {instance_destroy() }
        Power = Power + 1
    } 
}    


// Player stay inside room // 
if x &lt; 0 {x = 0}
if y &lt; 0 {y = 0}
if x &gt; room_width {x = room_width}
if y &gt; room_height {y = room_height}

// Player Death //
EnemyContact = instance_place(x,y,oEnemy)
ExplodingEnemyContact = instance_place(x,y,oExplodingEnemy)

if instance_exists(EnemyContact) or (ExplodingEnemyContact)
{
    ScreenShake(90)
    ExplodeIntoANumberOfChunks(oGame.NumberOfPlayerChunks,oPlayerChunk) 
}








</string>
